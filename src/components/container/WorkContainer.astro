---
interface Props {
  title: string;
  description: string;
  hasLine: boolean;
}

const { title, description, hasLine } = Astro.props;
---
<li class="flex-start group relative flex lg:flex-col">
  {
    hasLine && (
      <span
        class="absolute left-[18px] top-14 h-[calc(100%_-_32px)] w-px bg-chalet-green-800 lg:right-0 lg:left-auto lg:top-[18px] lg:h-px lg:w-[calc(100%_-_72px)]"
        aria-hidden="true">
      </span>
    )
  }
  <div class="
    inline-flex h-10 w-10 shrink-0 items-center justify-center 
    rounded-xl border border-chalet-green-800 bg-chalet-green-800 transition-all 
    duration-200 group-hover:border-chalet-green-400 group-hover:bg-chalet-green-400">
