---
import { type Product } from "@constants/product";

interface Props {
  product: Product
}

const { product }     = Astro.props;
const transition_name = product.slug;
---

<a href={`/producto/${product.slug}`} class="block">
  <article class="group bg-flex flex-col shadow-sm rounded-lg overflow-hidden hover:shadow-xl hover:shadow-gray-100 transition-all">
    <div class="sm:w-64 w-72 overflow-hidden">
      <img
        src={product.cover}
        alt={product.name}
        transition:name={`${transition_name} image`}
        class="object-cover object-center w-full grayscale-[0.1] group-hover:grayscale-0 h-full rounded-md group-hover:scale-105 transition-all"
      />
    </div>
    <div class="p-6">
      <h3
        class="font-semibold truncate"
        transition:name={`${transition_name} title`}
      >
        {product.name}
      </h3>
      <p
        class="text-gray-600 text-sm truncate"
        transition:name={`${transition_name} description`}
      >
        {product.description}
      </p>
      <div class="text-right mt-4" transition:name={`${transition_name} price`}>
        <span class="font-semibold">${product.price}</span>
      </div>
    </div>
  </article>
</a>
