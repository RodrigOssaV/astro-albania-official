---
import { enterprice } from "@constants/enterprice";

const {headquarters} = enterprice;
---
<div class="p-5">
  <div class="text-sm uppercase text-indigo-600 font-bold">Recursos</div>
  <a class="my-3 block" href="/#">Catálogo<span class="text-teal-600 text-xs p-1"></span></a>
  <a class="my-3 block" href="/#">Mi Carrito<span class="text-teal-600 text-xs p-1"></span></a>
  <a class="my-3 block" href="/#">Ventas por mayor<span class="text-teal-600 text-xs p-1">Nuevo*</span></a>
</div>
<div class="p-5">
  <div class="text-sm uppercase text-indigo-600 font-bold">Soporte</div>
  <a class="my-3 block" href="/#">FAQ<span class="text-teal-600 text-xs p-1"></span></a>
  <a class="my-3 block" href="/#">Política de privacidad<span class="text-teal-600 text-xs p-1"></span></a>
  <a class="my-3 block" href="/#">Términos y condiciones<span class="text-teal-600 text-xs p-1"></span></a>
  <a class="my-3 block md:hidden" href="/sucursales">Sucursales<span class="text-teal-600 text-xs p-1"></span></a>
</div>
<div class="p-5">
  <div class="text-sm uppercase text-indigo-600 font-bold">Contacto</div>
  <a class="my-3 block">{headquarters.complete}<span class="text-teal-600 text-xs p-1">Casa matriz</span></a>
  <a class="my-3 block" href={`mailto:${enterprice.mail}`} target="_blank" rel="noopener noreferrer">{enterprice.mail}<span class="text-teal-600 text-xs p-1"></span></a>
</div>