---
import HeroContent from "@content/HeroContent.astro";
---

<section class="relative w-full h-[320px] md:h-[720px] aspect-video" id="home">
  <div class="absolute left-1/2 right-0 z-10 m-auto flex -translate-x-1/2 flex-col items-center w-full">
    <HeroContent />
  </div>

  <video
    class="h-full w-full animate-fade object-cover object-top animate-duration-1000 animate-ease-in-out"
    src="/hero-video.mp4"
    autoplay
    loop
    muted />
</section>