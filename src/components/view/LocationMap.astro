---
import { addresses } from "@constants/address";
import { enterprice } from "@constants/enterprice";
---

<section>
  <div class="max-w-7xl mx-auto py-16 px-4 sm:px-6 lg:py-20 lg:px-8">
    <div class="max-w-2xl lg:max-w-4xl mx-auto text-center">
      <h2 class="text-3xl font-extrabold text-gray-900">Visit Our Location</h2>
      <p class="mt-4 text-lg text-gray-500">
        Lorem ipsum dolor sit amet consectetur adipisicing elit.
      </p>
    </div>

    <div class="w-full mx-auto mt-20">
      <div class="bg-blue-500 p-2 rounded-t-lg">
        <div class="flex justify-center space-x-4" id="content-buttons">
          {
            addresses.map(({ name }) => (
              <button class="px-4 py-2 text-white font-semibold border-b-4 border-blue-700 hover:bg-blue-700 focus:outline-none tab-button">
                {name}
              </button>
            ))
          }
        </div>
      </div>

      {
        addresses.map((ad) => (
          <div>
            {ad.id === 1 ? (
              <div class="p-4 tab-content bg-white shadow-md rounded-lg">
                <div class="mt-16 lg:mt-20">
                  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <div class="rounded-lg overflow-hidden">
                      <iframe
                        src={`${ad.google_map?.url}`}
                        width="600"
                        height="450"
                        style="border:0;"
                        allowfullscreen=""
                        loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade"
                      />
                    </div>
                    <div>
                      <div class="max-w-full mx-auto rounded-lg overflow-hidden">
                        <div class="px-6 py-4">
                          <h3 class="text-lg font-medium text-gray-900">
                            Our Address
                          </h3>
                          <p class="mt-1 text-gray-600">
                            {ad.name} - #{ad.number},{" "}
                            {ad.city}
                          </p>
                        </div>
                        <div class="border-t border-gray-200 px-6 py-4">
                          <h3 class="text-lg font-medium text-gray-900">
                            Hours
                          </h3>
                          {
                            ad.schedule_week && (
                            <p class="mt-1 text-gray-600">
                            {ad.schedule_week}: {ad.schedule_week_open} - {ad.schedule_week_close}
                          </p>
                            )
                          }
                          {
                            ad.schedule_weekend && (
                            <p class="mt-1 text-gray-600">
                            {ad.schedule_weekend}: {ad.schedule_saturday_open} - {ad.schedule_saturday_closed}
                          </p>
                            )
                          }
                          <p class="mt-1 text-gray-600">Domingos: {ad.schedule_sunday}</p>
                        </div>
                        <div class="border-t border-gray-200 px-6 py-4">
                          <h3 class="text-lg font-medium text-gray-900">
                            Contact
                          </h3>
                          <p class="mt-1 text-gray-600">
                            Correo: {enterprice.mail}
                          </p>
                          <p class="mt-1 text-gray-600">
                            Teléfono: {enterprice.phone}
                          </p>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            ) : (
              <div  class="p-4 tab-content bg-white shadow-md rounded-lg hidden">
                <div class="mt-16 lg:mt-20">
                  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <div class="rounded-lg overflow-hidden">
                      <iframe
                        src={`${ad.google_map?.url}`}
                        width="600"
                        height="450"
                        style="border:0;"
                        allowfullscreen=""
                        loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade"
                      />
                    </div>
                    <div>
                      <div class="max-w-full mx-auto rounded-lg overflow-hidden">
                        <div class="px-6 py-4">
                          <h3 class="text-lg font-medium text-gray-900">
                            Our Address
                          </h3>
                          <p class="mt-1 text-gray-600">
                            {ad.name} - #{ad.number},{" "}
                            {ad.city}
                          </p>
                        </div>
                        <div class="border-t border-gray-200 px-6 py-4">
                          <h3 class="text-lg font-medium text-gray-900">
                            Hours
                          </h3>
                          {
                            ad.schedule_week && (
                            <p class="mt-1 text-gray-600">
                            {ad.schedule_week}: {ad.schedule_week_open} - {ad.schedule_week_close}
                          </p>
                            )
                          }
                          {
                            ad.schedule_weekend && (
                            <p class="mt-1 text-gray-600">
                            {ad.schedule_weekend}: {ad.schedule_saturday_open} - {ad.schedule_saturday_closed}
                          </p>
                            )
                          }
                          <p class="mt-1 text-gray-600">Domingos: {ad.schedule_sunday}</p>
                        </div>
                        <div class="border-t border-gray-200 px-6 py-4">
                          <h3 class="text-lg font-medium text-gray-900">
                            Contact
                          </h3>
                          <p class="mt-1 text-gray-600">
                            Correo electrónico: {enterprice.mail}
                          </p>
                          <p class="mt-1 text-gray-600">
                            Teléfono: {enterprice.phone}
                          </p>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            )}
          </div>
        ))
      }
    </div>
  </div>
</section>
<style>
  .tab-button.active {
    background-color: #fff;
    border-color: #4299e1;
    color: #4299e1;
  }
</style>
<script>
  const buttons = document.querySelectorAll("#content-buttons .tab-button");
  const contents = document.querySelectorAll(".tab-content");
  buttons.forEach((button, index) => {
    button.addEventListener("click", () => {
      // Ocultar todos los contenidos
      contents.forEach((content) => content.classList.add("hidden"));

      // Remover estilo activo de todos los botones
      buttons.forEach((btn) => btn.classList.remove("bg-blue-700"));

      // Mostrar el contenido correspondiente
      contents[index].classList.remove("hidden");

      // Añadir estilo activo al botón actual
      button.classList.add("bg-blue-700");
    });
  });
</script>
