---
import SectionTitle from "@container/SectionTitle.astro";
import { CountUp } from "@util/CountUp";
---
<div class="max-w-7xl mx-auto py-16 px-4 sm:px-6 lg:py-20 lg:px-8">
  <div class="max-w-2xl lg:max-w-4xl mx-auto text-center" data-aos="fade-down">
    <SectionTitle title="Nuestros nÃºmeros" description="Nos comprometemos con el cuidado del planeta mediante iniciativas sostenibles y responsables." />
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-y-4" data-aos="fade-down">
    <div class="flex flex-col justify-center items-center">
      <span class="number text-7xl font-bold tabular-nums tracking-tighter">
        <CountUp
          client:visible
          initial={0}
          final={52.7}
          decimals={1}
        />M</span
      >
      <span class="uppercase">de seguidores en redes sociales</span>
    </div>
    <div class="flex flex-col justify-center items-center">
      <span class="number text-7xl font-bold tabular-nums tracking-tighter">
        <CountUp client:visible initial={0} final={5} /></span>
      <span class="uppercase">sucursales</span>
    </div>
    <div class="flex flex-col justify-center items-center">
      <span class="number text-7xl font-bold tabular-nums tracking-tighter">
        <CountUp client:visible initial={0} final={18.2} decimals={1} />K</span>
      <span class="uppercase">personas nos eligen como favoritos</span>
    </div>
  </div>
</div>