---
import SectionTitle from "@container/SectionTitle.astro";
---

<div class="max-w-7xl mx-auto p-16" data-aos="fade-down">
  <SectionTitle title="GalerÃ­a" description="Algunos de nuestros productos." />
  <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mx-auto " id="gallery" data-aos="zoom-in">
    {
      Array.from({ length: 9 }).map((_, i) => (
        <a
          class="group rounded-xl hover:scale-105 transition-all relative"
          href={`/examples/example-${i + 1}.webp`}
          target="_blank"
          data-cropped='true'
          data-pswp-width="800"
          data-pswp-height="1020">
          <img
            class="rounded-xl"
            loading="lazy"
            src={`/examples/example-${i + 1}.webp`}
            alt=""
            class:list={["w-72 h-w-72 hover:scale-105"]}
          />
        </a>
      ))
    }
  </div>
</div>

<script>
  import PhotoSwipeLightbox from "photoswipe/lightbox";
  import 'photoswipe/style.css';

  const lightbox = new PhotoSwipeLightbox({
    gallery: "#gallery",
    children: "a",
    pswpModule: () => import("photoswipe"),
  });

  lightbox.init();
</script>