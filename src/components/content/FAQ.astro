---
import FAQContainer from "@container/FAQContainer.astro";
import RowDown from "@icons/RowDown.astro";


---

<div class="max-w-7xl mx-auto p-8" data-aos="fade-down">
  <div class="p-6 bg-chalet-green-500 rounded-xl">
    <div class="flex flex-col items-center mx-auto">
      <h2 class="mt-6 text-3xl font-semibold tracking-tight text-chalet-green-300 sm:text-4xl lg:text-5xl">
        FAQ
      </h2>
      <p class="mx-auto mt-4 max-w-2xl text-lg font-normal text-chalet-green-200 lg:text-xl lg:leading-8">
        Frequenty asked questions
      </p>
    </div>
    <div class="mx-auto mt-8 grid w-full">
      <FAQContainer question="How does the billing work?" />
      <FAQContainer question="Can i get a refund for my subscription?" />
      <FAQContainer question="How do i cancel my subscription?" />
      <FAQContainer question="Is there a free trial?" />
      <FAQContainer question="How do i contact support?" />
      <FAQContainer question="Do you offer any discounts or promotions?" />
    </div>
  </div>
</div>
