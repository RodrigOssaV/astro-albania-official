{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@icon/*": ["src/icons/*"],
      "@layout/*": ["src/layouts/*"],
      "@view/*": ["src/components/view/*"],
      "@core/*": ["src/components/core/*"],
      "@util/*": ["src/components/util/*"],
      "@shared/*": ["src/components/shared/*"],
      "@container/*": ["src/components/container/*"],
    }
  }
}
